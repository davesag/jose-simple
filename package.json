{
  "name": "jose-simple",
  "version": "1.1.0",
  "description": "A very simple JOSE encryption/decription utility",
  "engines": {
    "node": ">= 10.14.1",
    "npm": ">= 4.1.0"
  },
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "find ./test/unit -name '*_spec.js' | NODE_ENV=test xargs mocha --require ./test/unit/test_helper.js",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --single-quote --no-semi --write '**/*.{js,json}'",
    "test:unit:cov": "find ./test/unit -name '*_spec.js' | NODE_ENV=test xargs nyc mocha --require ./test/unit/test_helper.js"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "keywords": [
    "jose",
    "crypto",
    "tokens",
    "jwt"
  ],
  "author": "Dave Sag <davesag@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davesag/jose-simple.git"
  },
  "bugs": {
    "url": "https://github.com/davesag/jose-simple/issues"
  },
  "homepage": "https://github.com/davesag/jose-simple#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.3.0"
  },
  "dependencies": {
    "node-jose": "^1.1.0"
  },
  "greenkeeper": {
    "ignore": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
